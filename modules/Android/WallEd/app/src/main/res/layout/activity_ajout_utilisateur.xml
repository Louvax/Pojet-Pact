<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".controller.AjoutUtilisateur">

    <EditText
        android:id="@+id/Nom_txt"
        android:layout_width="379dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nom de l'élève"
        android:textSize="23dp"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/prenom_txt"
        android:layout_width="379dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Prénom de l'élève"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/classe_txt"
        android:layout_width="379dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Classe de l'élève"
        android:textSize="23dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="257dp" />

    <Button
        android:id="@+id/enregistrement_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#42AD2F"
        android:padding="30dp"
        android:text="Enregistrer l'élève"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="607dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AJOUT D'UN UTILISATEUR"
        android:padding="30dp"
        android:background="#EEBA20"
        android:textColor="#FCFBFB"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="214dp"
        android:layout_height="236dp"
        android:layout_margin="0"
        android:padding="0"
        android:paddingStart="0"
        android:paddingLeft="0"
        android:paddingTop="0"
        android:paddingEnd="0"
        android:paddingRight="0"
        android:paddingBottom="0"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/appareil_photo_2"
        tools:layout_editor_absoluteY="329dp" />



</androidx.constraintlayout.widget.ConstraintLayout>