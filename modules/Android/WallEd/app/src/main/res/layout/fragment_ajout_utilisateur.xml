<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AjoutUtilisateurFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="#EEBA20"
            android:padding="30dp"
            android:text="AJOUT D'UN UTILISATEUR"
            android:textColor="#FCFBFB"
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nom_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Nom de l'élève"
            android:textSize="23dp"
            tools:layout_editor_absoluteX="12dp" />

        <EditText
            android:id="@+id/prenom_txt"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Prénom de l'élève"
            android:textSize="23dp"/>

        <EditText
            android:id="@+id/classe_txt"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Classe de l'élève"
            android:textSize="23dp"/>


        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="214dp"
            android:layout_height="236dp"
            android:layout_margin="0dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center"
            android:background="#FFFFFF"
            android:padding="0dp"
            android:paddingStart="0dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/appareil_photo_2" />

        <Button
            android:id="@+id/enregistrement_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:background="#42AD2F"
            android:padding="30dp"
            android:text="Enregistrer l'élève"
            android:textSize="20dp" />

    </LinearLayout>
</FrameLayout>